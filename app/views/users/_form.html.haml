= form_for @user do |f|

  = f.fields_for :profile do |p|
    %p
      = p.label :name
      = p.text_field :name

    %p
      = p.label :bio
      = p.text_area :bio

  %p
    = f.label :email
    = f.text_field :email

  %p
    = f.label :password
    = f.password_field :password

  %p
    = f.label :password_confirmation
    = f.password_field :password_confirmation


  %p
    = f.submit "Save"
