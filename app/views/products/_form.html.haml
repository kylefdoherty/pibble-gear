= form_for @product do |f|
  %p
    = f.label :name
    = f.text_field :name

  %p
    = f.label :description
    = f.text_area :description

  %p
    = f.label :price
    = f.number_field :price

  %p
    = f.label :affiliate_link
    = f.text_field :affiliate_link

  %p
    = f.label :large_image_link
    = f.text_field :large_image_link

  %p
    = f.label :small_image_link
    = f.text_field :small_image_link

  %p
    = f.label :product_image
    = f.file_field :product_image


  %p
    = f.submit
