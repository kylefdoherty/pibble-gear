%h1
  = @product.name
%p
  = @product.description

%p
  = @product.price

%p
  %img{:border => "0", :src => @product.large_image_link }/

%p
  = link_to "Purchase on Amazon", @product.affiliate_link,  target: "_blank"

- if user_signed_in?
  %p
    = link_to "Edit Product", edit_product_path(@product)

  %p
    = link_to "Delete Product", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }
